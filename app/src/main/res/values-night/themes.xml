<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accentColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:panelFullBackground">@color/primaryColor</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="SwitchCompat" parent="Theme.SimpleNotes">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/accentColor</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="Theme.SimpleNotes.Popup">
        <item name="android:colorBackground">@color/primaryColor</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Theme.SimpleNotes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>